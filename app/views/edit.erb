<form action="/articles/<%= @article.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h3>Title: <input type="text" id="title" name="article[title]" value="<%= @article.title %>"></h3>
    <h3>Content: <input type="text" id="content" name="article[content]" value="<%= @article.content %>"></h3>
    <input type="submit" value="submit">
</form>